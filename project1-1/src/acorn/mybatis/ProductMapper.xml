	<select id="getList" resultType="acorn.product.dto.ItemDto">
		SELECT pname,pno,comments,price,main_img,price,stock,regdate
		FROM item
		ORDER BY regdate DESC
	</select>
	<!-- <delete id="delete" parameterType="int">
